#!/bin/sh
# ^^^ for syntax checking in the editor only

[ -z "$MDSC_DETAIL" ] || echo "> $MDSC_CMD: ScanSourceNamespaces.include: scanning local source namespaces" >&2

set -e

local file

find "$MDSC_SOURCE" -mindepth 2 -maxdepth 2 -type f -name repository.inf \
| sort -z \
| while IFS= read -r file; do
	file=${file%/repository.inf}
	echo "${file#$MDSC_SOURCE/}"
done
